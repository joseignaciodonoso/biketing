
#sections
	position relative
	left 0%
	transition .5s
	&.sections--left
		left -50%


section
	position relative
	background-color $light
	color $dark
	border-bottom 1px solid rgba(255, 255, 255, .1)
	overflow hidden
	margin: 50px 0px
	// Elementos
		
	.section__bg
		cover(absolute)

	.section__title
		font-weight bold

	.section__description
		font-weight normal
		margin-bottom 20px
		@media $break-md
			font-size $global-size-md 
			line-height $global-lh-lg

	
	.section__header
		text-align center
		margin-bottom 20px
		position relative
		.section__title
			position relative
			display block
			margin-bottom 20px
			color $color_primary
			@media $break-md
				max-width 100%

	.section__filters
		margin 10px
		padding-bottom 20px
		position relative
		overflow auto
		white-space nowrap
		margin 0px -20px 30px
		margin-bottom 40px
		padding 20px 5px
		@media $break-limit
			display flex
			text-align center
			justify-content center
			overflow visible
			white-space normal
			margin-bottom 80px

		.section__filter
			display inline-block
			border-radius 20px
			background-color white
			border 1px solid $cyan
			color $dark
			padding 7px 15px
			margin 0px 2px
			transition .3s
			cursor pointer
			font-weight 500
			&:hover
				background-color $cyan
				color white
			&.current
				background-color $cyan
				color white
	
	.section__footer
		width 100%
		text-align center
		.section__description
			color #1D008E
			font-size 10px
			width 50%
			line-height 1.8
			font-family 'Roboto'
			margin 20px auto 0 auto

	

	
	.section__content
		position relative
		color $dark
		line-height $global-lh-md
		font-size $global-size-xmd
		&>*
			animation slideFadeUp .5s ease backwards
			animation-stagger(5,.2s)
		&.section--left
			text-align left

		&.section--right
			text-align right

		&.section--center
			text-align center

		&.section--justify
			text-align justify
		
		blockquote
			p
				line-height $global-lh-md
				font-size $global-size-md
				color $dark
				@media $break-md
					font-size $global-size-lg		

		ul
			margin-bottom 20px
			li
				padding 5px 0px
				&:before
					content ''
					display inline-block
					margin-right 10px
					position relative
					top -1px
					width 10px
					height 10px
					line-height 21px
					text-align center
					border-radius 50%
					overflow initial
					background-color $color_primary

		&.section__content--2col
			@media $break-sm
				column-count 2
				column-gap 40px

		&.section__content--3col
			@media $break-sm
				column-count 2
				column-gap 40px
			@media $break-md
				column-count 3	
	
	.section__flex
		@media $break-md
			display flex
			flex-direction row
			align-items center				

	.section__wrap
		position relative
		max-width $limit
		margin 0 auto
		padding 30px 10px
		@media $break-md
			padding 20px 134px

		&.section__wrap--main
			padding 120px 20px 120px
			@media $break-md
				padding 50px 40px 150px
		

		&.section__wrap--header		
			padding 100px 20px 40px		
			@media $break-md
				padding 150px 40px 20px		

		&.section__wrap--header-doc		
			padding 100px 20px 40px		
			@media $break-md
				padding 150px 40px 80px		
		
		&.section__wrap--md		
			padding 40px 20px
			@media $break-md
				padding 40px	
				
		&.section__wrap--sm
			padding 10px 10px
			@media $break-md
				padding 0px 40px
		
		&.section__wrap--xs	
			padding 30px 20px
			@media $break-md
				padding 30px 20px
			
					
		&.section--xs
			max-width ($limit - 800)

		&.section--sm
			max-width ($limit - 500)

		&.section--md
			max-width ($limit - 340)
		
		&.section--lg
			max-width ($limit - 200)	

	// Variantes


	&.section--dark
		background $dark
		color white
						
	&.section--light
		background: rgba(5,102,116,.07);
		background: linear-gradient(101deg, rgba(5,102,116,.07) 12%, rgba(102,191,191,.07) 100%);
		color $dark
	
	&.section--white
		background white
		color $dark	
	
	&.section--lighter
		background $lighter
		color $dark	

	&.section--white
		background white
		color $dark
	
	&.section--color-primary
		background $color_primary
		color white
	
	&.section--color-secundary
		background $color_primary
		color white	
	
	&.section--gray
		background $gray
		color white	
	
	&.section--grayten
		background grayter
		color white	

	// Types

	&.section--main
		.section__wrap
			.section__body
				flex-direction: column
				background-color: rgba(234, 234, 234, 0.434)
				border-radius: 20px
				padding 40px
				.section__body__header
					max-width: 712px
					font-size: 36px
					margin-bottom: 200px
					text-align: center
					.section__title
						font-size: 36px
						color: $dark
				.section__body__body
					margin-top: 150px
					background-color: white
					border-radius: 20px
					.section__image
						background-color: rgba(255, 255, 255, 0)
						position: absolute
						z-index 1
						top: -25%
						left: 50%
						transform: translate(-50%, -50%)
						width: 87%
					.section__content
						background-color: white
						border-radius: 20px 0px 0px 20px
						position relative
						z-index 4
						padding 25px
						text-align: center
						&.section__content--right
							border-radius: 0px 20px 0px 0px
						.section__title
							font-size: 24px
							text-align: center
						.section__description
							font-size: 18px
							text-align: center
	&.section--media
		.section__body
			flex-direction: column
			background-color: white
			border-radius: 20px
			position relative
			padding: 50px
			.section__box
				position: absolute
				height: 95%
				width: 70%
				border-radius: 20px
				background-color: rgba(234, 234, 234, 0.434)
				margin: -35px -35px
				right 45px
				&.section__box--left
					left 45px
			.section__content
				background-color: white
				border-radius: 20px
				padding: 25px
			.section__image
				display: flex
				align-items: center


	&.section--testimonies
		.section__header
			text-align center
		.section__avatars
			overflow auto
			margin 0 -20px 20px
			padding 0 20px
			white-space nowrap
			text-align center
			@media $break-md
				padding-bottom 40px
			.section__avatar
				display inline-block
				vertical-align middle
				width 85px
				cursor pointer
				@media $break-sm
					width 120px
				img
					circle(80px)
					border 5px solid transparent
					@media $break-sm
						circle(120px)
					margin 0 auto
					transition .2s ease
					transform scale(.7)
				&.current
					img
						background-color $color_primary
						transform scale(0.9)
						opacity 1
		.section__testimonies
			text-align center
			.section__testimony
				&.in
					animation fadeIn .5s .2s ease backwards
					display block
				&.out
					animation fadeOut .4s ease
					position absolute
					top 0
					left 0
					width 100%
					display none
				.section__testimony--header
					.section__title
						margin-bottom 5px
					.section__description
						opacity .4
				.section__testimony--body
					max-width 880px
					margin 0 auto
					.section__description
						font-size 18px
						line-height 32px
						opacity .7
						@media $break-md
							font-size 18px
							line-height 32px
					.section__icon
						a
							font-size 24px
	&.section--features
		.section__body
			background-color: rgba(234, 234, 234, 0.434)
			border-radius: 20px
			padding: 35px
			.section__body__header
				.section__header
					font-size: 32px
					text-align: left