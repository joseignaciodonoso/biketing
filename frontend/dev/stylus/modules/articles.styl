article
	position relative
	overflow hidden
	transition box-shadow 0.3s ease 0s
	background-color white
	background white
	box-shadow: $shadow
	a:after
		content ""
		cover absolute
		z-index 2

	// Elements

	.article__bg
		cover absolute

	.article__title
		font-weight 500
		margin-bottom 5px

	.article__description
		margin-bottom 10px
		font-size $global-size-sm
		line-height $global-lh-md
		&:last-child
			margin-bottom 0

	.article__content
		p
			font-size $global-size-md
			opacity .7
	

	&.article--features
		padding: 15px

